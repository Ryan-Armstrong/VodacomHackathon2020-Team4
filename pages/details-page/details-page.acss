.page-details {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
  flex-grow: 1;
}
.title-view {
  background: #f1f1f1;
  height: 45px;
  justify-content: center;
  align-items: center;
  display: flex;
}

.title {
  color: #333333;
  font-size: 20sp;
  font-family: 'vodafone';

}

